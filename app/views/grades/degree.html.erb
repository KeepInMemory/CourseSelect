<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <% user_credit=0%>
          <% if student_logged_in? %><h3 class="panel-title">学位课管理</h3><% end %>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>

            <tr>
              <th>课程名</th>
              <th>学时学分</th>
              <th>授课老师</th>
              <th>学位课</th>
            </tr>
            </thead>
            <tbody>

            <% @grades.each do |grade| %>
                <tr>
                  <td><%= grade.course.name %></td>
                  <td><%= grade.course.credit %></td>
                  <td><%= grade.course.teacher.name %></td>
                  <%if grade.isDegree==true%>
                      <td>是</td>
                  <%else%>
                      <td>否</td>
                  <%end%>
                  <%@grade=grade%>
                  <% if grade.isDegree? %>
                      <td><%= link_to "设为非学位课", grades_setUnDegree_path(id:@grade.id), class: 'btn btn-xs btn-info' %></td>
                  <% else %>
                      <td><%= link_to "设为学位课", grades_setDegree_path(id:@grade.id), class: 'btn btn-xs btn-info' %></td>
                  <% end %>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>